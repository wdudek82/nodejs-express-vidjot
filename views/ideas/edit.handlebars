<div class="card card-body">
  <h3>Edit Video Idea</h3>
  <form action="/ideas/{{idea._id}}?_method=PUT" method="POST">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" name="title" class="form-control" value="{{idea.title}}">
    </div>
    <div class="form-group">
      <label for="details">Details</label>
      <textarea type="text" name="details" class="form-control">{{idea.details}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <input type="hidden" name="_method" value="PUT">
  </form>
</div>
